{
  "name": "futurice-cv",
  "version": "1.0.0",
  "description": "Futurice CV generator",
  "main": "index.js",
  "dependencies": {
    "foundation-sites": "=6.1.2",
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "chokidar-cli": "^1.2.0",
    "node-sass": "=3.4.2"
  },
  "scripts": {
    "build-js": "browserify js/main.js -t babelify --outfile index.js",
    "build-sass": "node-sass --include-path node_modules/foundation-sites/scss css/style.scss style.css"
  },
  "author": "",
  "license": "ISC",
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "foundation": "./node_modules/foundation-sites/js/foundation.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "foundation": "foundation"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
}
